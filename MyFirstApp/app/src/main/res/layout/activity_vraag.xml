<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".VraagActivity"
    tools:showIn="@layout/base_activity">

    <!--
    Als de tekst te groot is voor het scherm dan moet worden gebruikt:
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    -->

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:gravity="top|right"
        android:background="@drawable/logo_klein"
        android:id="@+id/linearLayout3"
        android:layout_gravity="right"
        android:onClick="ButtonBenIkNormaal"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Hier komt de vraag"
        android:textSize="25dp"
        android:gravity="top"
        android:id="@+id/vraag_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antwoord A - button past zich aan de lengte van de tekst aan, we moeten dus een maximale lengte instellen voor de antwoorden, anders valt B eraf"

            android:textSize="20sp"
            android:id="@+id/ButtonA"
            android:layout_alignBaseline="@+id/ButtonB"
            android:layout_alignBottom="@+id/ButtonB"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:onClick="ButtonAntwoord"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antwoord B"
            android:textSize="20sp"
            android:id="@+id/ButtonB"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="ButtonAntwoord"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volgende_knop"
        android:textSize="12sp"
        android:id="@+id/ButtonVolgende"
        android:onClick="ButtonVolgende"
        android:layout_toLeftOf="@+id/ButtonResultaat"
        android:layout_toStartOf="@+id/ButtonResultaat"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultaat_knop"
        android:textSize="12sp"
        android:id="@+id/ButtonResultaat"
        android:onClick="ButtonResultaat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_weight="1"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/upvote_knop"
        android:textSize="12sp"
        android:id="@+id/buttonUp"
        android:onClick="ButtonVote"
        style="?android:attr/buttonStyleSmall"
        android:layout_toLeftOf="@+id/buttonDown"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/downvote_knop"
        android:id="@+id/buttonDown"
        android:onClick="ButtonVote"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignTop="@+id/buttonReport"
        android:layout_toLeftOf="@id/buttonReport"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/report_knop"
        android:textSize="12sp"
        android:id="@+id/buttonReport"
        android:onClick="ButtonReport"
        style="?android:attr/buttonStyleSmall"
        android:layout_toLeftOf="@+id/ButtonVolgende"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
