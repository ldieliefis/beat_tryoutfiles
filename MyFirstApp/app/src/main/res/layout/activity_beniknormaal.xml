<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_beniknormaal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".BeniknormaalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="blabla"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:id="@+id/tekstvakantwoord"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/percentage_container"
        android:orientation="horizontal"
        android:gravity="center_vertical|center"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="30"
            android:id="@+id/percentagebalk_links"
            android:orientation="vertical"
            android:background="@color/PercentageGekheidMeerderheid"></LinearLayout>

        <LinearLayout
            android:layout_width=" 0dp"
            android:layout_height="50dp"
            android:layout_weight="70"
            android:id="@+id/percentagebalk_rechts"
            android:orientation="vertical"
            android:background="@color/PercentageGekheidMinderheid"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="start|center_vertical"
            android:background="@color/PercentageGekheidMeerderheid"
            android:layout_marginRight="20dp">
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Jij valt binnen dit percentage"
            android:layout_gravity="center|left"
            android:textSize="16sp"
            android:id="@+id/legenda_tekst_jouw_score"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="start|center_vertical"
            android:background="@color/PercentageGekheidMinderheid"
            android:layout_marginRight="20dp">
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Dit zijn de overige mensen"
            android:layout_gravity="center|left"
            android:textSize="16sp"
            android:id="@+id/legenda_tekst_overigen"/>
    </LinearLayout>
        </LinearLayout>

</LinearLayout>
