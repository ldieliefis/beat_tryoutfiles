<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="drawerArrowStyle">@style/NavigationDrawerKnop</item>
    </style>
    <!--
    <item name="windowActionBar">false</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    -->
    <style name="BeaTTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/PrimaryBlue</item>
        <item name="android:textColor">@color/PrimaryGrey</item>

        <item name="colorPrimary">@color/Toolbar_Background</item>
        <item name="colorPrimaryDark">@color/Statusbar_Background</item>


    </style>
    <!--
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
    -->

    <style name="BeaTTheme.Buttons">
        <item name="android:textColor">@color/Button_Text_Color</item>
    </style>

    <style name="BeaTTheme_PopUp" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/PrimaryBlue</item>
        <item name="android:textColor">@color/PrimaryGrey</item>
    </style>

    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>

    <style name="NavigationDrawerKnop" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/PrimaryGrey</item>
    </style>


</resources>