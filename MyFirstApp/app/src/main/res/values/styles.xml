<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.DeviceDefault.Light"></style>

    <style name="BeaTTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/PrimaryBlue</item>
        <item name="android:textColor">@color/PrimaryGrey</item>
    </style>

    <style name="BeaTTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BeaTTheme.Buttons">
        <item name="android:textColor">@color/Button_Text_Color</item>
    </style>

    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>

</resources>